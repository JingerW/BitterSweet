<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingHorizontal="20dp"
    android:paddingTop="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true">

    <CheckBox
        android:id="@+id/select_button_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/record_time"
        android:gravity="center"
        android:text="Time"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/record_glucose_alert"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:layout_toStartOf="@+id/record_glucose"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/record_glucose"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Blood Glucose"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/blood_glucose_unit"
            android:gravity="center"
            android:layout_toEndOf="@id/record_glucose"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/record_label_meal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/record_label_meal_text"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/record_label_mealtime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/record_label_mealtime_text"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:gravity="center"
            android:textSize="12sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/record_trash_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/trash"/>

</LinearLayout>