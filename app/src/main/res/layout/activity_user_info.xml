<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfoActivity"
    android:background="@color/lightgreen">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/userinfo_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        >

        <Button
            android:id="@+id/userinfo_skip"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:text="@string/skip"
            android:padding="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/userinfo_heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/userinfo_topm"
        android:text="@string/userinfo_0"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/userinfo_heading2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/userinfo_heading1"
        android:text="@string/userinfo_1"
        android:textSize="18sp"
        android:textAlignment="center" />
    <TextView
        android:id="@+id/userinfo_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/userinfo_3"
        android:layout_below="@id/userinfo_heading2"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/userinfo_username_input"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/userinfo_username"
        android:inputType="text"/>

    <TextView
        android:id="@+id/userinfo_heading3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/userinfo_username_input"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:text="@string/userinfo_2"/>

    <Button
        android:id="@+id/userinfo_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userinfo_heading3"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/userinfo_heading3"
        android:background="@color/white"
        android:text="@string/start"
        android:textAlignment="center" />

</RelativeLayout>