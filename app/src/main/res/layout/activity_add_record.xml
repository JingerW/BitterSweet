<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecordActivity"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/blood_glucose_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent_Translucent" />

    <!-- blood glucose input -->
    <RelativeLayout
        android:id="@+id/blood_glucose_bg"
        android:layout_width="260dp"
        android:layout_height="250dp"
        android:background="@drawable/drop_green"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="?attr/actionBarSize">

        <EditText
            android:id="@+id/blood_glucose"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="130dp"
            android:background="@drawable/glucose_drop_button_green"
            android:gravity="center"
            android:textSize="14sp"
            android:textAlignment="center"
            android:inputType="numberDecimal"
            android:hint="@string/glucose_hint"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/blood_glucose"
            android:layout_centerHorizontal="true"
            android:hint="@string/glucose_unit"/>

    </RelativeLayout>

    <!-- time of input -->
    <LinearLayout
        android:id="@+id/blood_glucose_time_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blood_glucose_bg"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="60dp"
        android:padding="10dp"
        android:background="@drawable/green_white_bar">

        <TextView
            android:id="@+id/blood_glucose_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:background="@color/green"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <TextView
            android:id="@+id/blood_glucose_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@color/green"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

    </LinearLayout>

    <!-- label of input -->
    <RelativeLayout
        android:id="@+id/blood_glucose_label_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blood_glucose_time_group"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/green_white_bar">

        <RadioGroup
            android:id="@+id/label_meal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/breakfast"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:background="@drawable/breakfast_label"
                android:button="@color/fui_transparent"/>

            <RadioButton
                android:id="@+id/lunch"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginStart="20dp"
                android:background="@drawable/lunch_label"
                android:button="@color/fui_transparent"/>

            <RadioButton
                android:id="@+id/dinner"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginStart="20dp"
                android:background="@drawable/dinner_label"
                android:button="@color/fui_transparent"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_text_height"
            android:layout_below="@id/label_meal1"
            android:layout_alignStart="@id/label_meal1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/icon_text_height"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:text="@string/breakfast"
                android:textSize="12sp"
                android:textAlignment="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_text_height"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:text="@string/lunch"
                android:textSize="12sp"
                android:textAlignment="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_text_height"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:text="@string/dinner"
                android:textSize="12sp"
                android:textAlignment="center"
                android:gravity="center"/>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/label_meal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/label_meal1"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/before_meal"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:background="@drawable/before_meal_label"
                android:button="@color/fui_transparent"/>

            <RadioButton
                android:id="@+id/after_meal"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginStart="20dp"
                android:background="@drawable/after_meal_label"
                android:button="@color/fui_transparent"/>
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_text_height"
            android:layout_below="@id/label_meal2"
            android:layout_alignStart="@id/label_meal2">

            <TextView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_text_height"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:text="@string/before_meal"
                android:textSize="12sp"
                android:textAlignment="center"
                android:gravity="center"/>

            <TextView
            android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_text_height"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:text="@string/after_meal"
                android:textSize="12sp"
                android:textAlignment="center"
                android:gravity="center"/>

        </LinearLayout>

    </RelativeLayout>

    <!-- notes of input -->
    <RelativeLayout
        android:id="@+id/blood_glucose_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blood_glucose_label_group"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:padding="0dp"
        android:background="@drawable/green_white_bar">

        <TextView
            android:id="@+id/blood_glucose_note_label"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/green"
            android:text="Notes"
            android:gravity="center_vertical"
            android:paddingStart="10dp"/>

        <EditText
            android:id="@+id/blood_glucose_note_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/blood_glucose_note_label"
            android:layout_alignParentBottom="true"
            android:background="@drawable/green_white_bar"
            android:inputType="textMultiLine|textCapSentences"
            android:textSize="18sp"
            android:padding="5dp"/>

    </RelativeLayout>


</RelativeLayout>