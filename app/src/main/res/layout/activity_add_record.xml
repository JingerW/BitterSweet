<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AddRecordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/blood_glucose_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent" />

        <!-- blood glucose -->
        <RelativeLayout
            android:id="@+id/blood_glucose_bg"
            android:layout_width="@dimen/water_drop_width"
            android:layout_height="@dimen/water_drop_height"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/drop_green">

            <Button
                android:id="@+id/blood_glucose"
                android:layout_width="@dimen/water_drop_button_width"
                android:layout_height="@dimen/water_drop_button_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="170dp"
                android:background="@drawable/glucose_button_green"
                android:gravity="center"
                android:hint="@string/glucose_hint"
                android:textAlignment="center"
                android:textSize="35sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/blood_glucose"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/blood_glucose_unit" />

        </RelativeLayout>

        <!-- if blood glucose is too high, show keystone option -->
        <LinearLayout
            android:id="@+id/ketone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/red"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="0dp"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/ketone_note"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ketone_input_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="invisible">

                <EditText
                    android:id="@+id/ketone_input"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/ketone_unit"
                    android:textSize="12sp" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/ketone_toggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/white_round_corner"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ketone_yes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_button_background"
                    android:button="@null"
                    android:gravity="center"
                    android:text="Yes"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/ketone_no"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_button_background"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="No"
                    android:textSize="12sp" />
            </RadioGroup>
        </LinearLayout>

        <!-- date and time -->
        <LinearLayout
            style="@style/GreenOutlineSectionStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/blood_glucose_date"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@color/darkgreen"
                android:gravity="center" />

            <TextView
                android:id="@+id/blood_glucose_time"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/darkgreen"
                android:gravity="center" />

        </LinearLayout>

        <!-- food -->
        <LinearLayout
            style="@style/GreenOutlineSectionStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/GreenBarTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/food" />

            <!-- food tag -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <RadioGroup
                    android:id="@+id/label_meal1"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/breakfast"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:background="@drawable/breakfast_label"
                        android:button="@color/fui_transparent" />

                    <RadioButton
                        android:id="@+id/lunch"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/lunch_label"
                        android:button="@color/fui_transparent" />

                    <RadioButton
                        android:id="@+id/dinner"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/dinner_label"
                        android:button="@color/fui_transparent" />

                    <RadioButton
                        android:id="@+id/snack"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/snack_label"
                        android:button="@color/fui_transparent" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/label_meal2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/before_meal"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/before_meal_label"
                        android:button="@color/fui_transparent" />

                    <RadioButton
                        android:id="@+id/after_meal"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/after_meal_label"
                        android:button="@color/fui_transparent" />
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/breakfast"
                        android:autoSizeTextType="uniform"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/lunch"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/dinner"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/snack"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/before_meal"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/after_meal"/>
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/food_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/green_outline"
                android:hint="Details"
                android:imeOptions="actionDone"
                android:inputType="textImeMultiLine"
                android:padding="10dp"
                android:textSize="15sp" />

        </LinearLayout>

